[req]
default_bits = 2048
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn

[dn]
C = US
ST = YourState
L = YourCity
O = YourOrganization
OU = YourDepartment
CN = financial_nginx  # Set CN to the container name or primary domain

[req_ext]
subjectAltName = @alt_names

[alt_names]
DNS.1 = financial_nginx  # Docker container/service name
DNS.2 = localhost  # For local testing
DNS.3 = 127.0.0.1  # For local testing
# Add more if needed, e.g.:
# DNS.4 = example.com
# DNS.5 = www.example.com